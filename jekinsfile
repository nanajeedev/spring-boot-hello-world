pipeline{
    agent any
    environment {
        def scannerHome = tool 'sonarqube'
    }

    stages {
        stage("build code") {
            steps{
                script{
                    sh "ls -lrt"
                    sh "mvn install"
                }
            }
        }
        stage("Code Analysis") {
            steps {
                withSonarQubeEnv('sonar_env') {
                    sh """ ${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=spring-boot-hello-world \
                    -Dsonar.projectName=spring-boot-hello-world \
                    -Dsonar.sources=. \
                   -Dsonarâ€¦
                }
            }
        }
    }
}